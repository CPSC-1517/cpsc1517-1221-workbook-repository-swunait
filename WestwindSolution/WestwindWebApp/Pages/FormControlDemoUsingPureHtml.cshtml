@page
@model WestwindWebApp.Pages.FormControlDemoUsingPureHtmlModel
@{
}
<div class="alert-info">
    @Model.FeedbackMessage
</div>
<form method="post">

    <div class="mb-3">
        <label for="Username" class="form-label">Username</label>
        <input class="form-control"
               type="text"
               id="Username"
               name="Username"
               value="@Model.Username"/>
    </div>
    <div class="mb-3">
        <label for="Age" class="form-label">Age</label>
        <input type="number" 
               min="18" max="65"
               class="form-control"
               id="Age"
               name="Age"
               value="@Model.Age"/>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>