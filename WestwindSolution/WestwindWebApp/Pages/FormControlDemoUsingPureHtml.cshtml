@page
@model WestwindWebApp.Pages.FormControlDemoUsingPureHtmlModel
@{
}
<div class="alert-info">
    @Model.FeedbackMessage
</div>
<form method="post">

    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input  type="text" 
                class="form-control" 
                id="username" 
                name="Username"
                value="@Model.Username"/>
    </div>
    <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input type="number" 
                min="18" max="65"
                class="form-control" 
                id="age" 
                name="Age"
                value="@Model.Age"/>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>