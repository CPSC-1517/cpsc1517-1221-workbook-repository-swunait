@page
@model WestwindWebApp.Pages.FormControlDemoUsingTagHelpersModel
@{
}
<div class="alert-info">
    @Model.FeedbackMessage
</div>
<form method="post">

    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input  asp-for="Username"
                class="form-control"
                placeholder="Enter your name"
                 />
    </div>
    <div class="mb-3">
        <label asp-for="Age" class="form-label">Age</label>
        <input asp-for="Age" 
               min="18" max="99"
               class="form-control"                              
               />
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" 
            asp-for="Gender" value="Male">
        <label class="form-check-label" asp-for="Gender">
            Male
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" 
            asp-for="Gender" value="Female" checked>
        <label class="form-check-label" asp-for="Gender">
            Female
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio"
               asp-for="Gender" value="Unknown">
        <label class="form-check-label" asp-for="Gender">
            Unknown
        </label>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>

</form>